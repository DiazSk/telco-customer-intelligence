[flake8]
max-line-length = 88
extend-ignore = E203,W503,E501,E231,E221,E222,W291
exclude = 
    src/models/experimental/,
    venv/,
    .venv/,
    __pycache__/,
    *.pyc,
    .git/,
    .pytest_cache/,
    mlruns/,
    logs/
per-file-ignores =
    src/models/advanced_modeling*.py:E221,E222,E231,E501
    src/dashboard/*.py:E501,E231
    src/models/train_with_mlflow.py:E501,E231
    src/api/main.py:E402
